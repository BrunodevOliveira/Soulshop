<div class="container">
    <section class="m-1 mt-3">
        <a href="/lojas/novo" class="btn btn-success">
            <i class="bi bi-plus"></i>
            Criar loja
        </a>
        <hr/>
        <div >
            <form method="GET" class="row">
                <div class="col-md-10">
                    <input
                    type="text"
                    name="nomeLoja"
                    placeholder="Busque pelo nome da Loja"
                    class="form-control form-control mt-3"
                    value="{{nomeLoja}}"
                    />
                </div>
                <div class="col-md-2"> 
                    <button class="btn btn btn-dark mt-3">
                    <i class="bi bi-search"></i>
                    Buscar
                    </button>
                </div>
            </form>
        </div>
    
        <div class="d-flex justify-content-around flex-wrap">
            {{#each lojas}}
                <div class="modal" id="myModal" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Deseja mesmo deletar esta loja?{{this.name}}</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cancelar</button>
                                <form action="/lojas/deletar" method="POST">
                                    <input type="hidden" name="id" value="{{this._id}}">
                                    <button class="btn btn-danger delete mx-1" type="submit">
                                        Deletar
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow mt-4">
                    <div class="d-flex justify-content-center">
                        <img src="/img/logo.png" height="150" width="300" alt="Logo Soulshop">
                    </div>
                    <div class="card-body bg-secondary">
                        <h5 class="card-title text-center text-white">{{this.name}}</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><i class="bi bi-geo-alt"></i>{{this.address}}</li>
                        <li class="list-group-item"><i class="bi bi-telephone"></i>{{this.number}}</li>
                        <li class="list-group-item"><i class="bi bi-shop"></i>Horário de funcionamento: Segunda à Sexta - {{this.operationOpen}} às {{this.operationClose}}</li>
                        <li class="list-group-item"><i class="bi bi-search"></i>{{this.cnpj}}</li>
                        <li class="list-group-item"><i class="bi bi-mailbox"></i>{{this.state}}</li>
                        <li class="list-group-item"><i class="bi bi-award"></i>Avaliação da loja: {{this.reputation}}</li>
                    </ul>
                    <div class="card-body">
                        <div class="d-flex justify-content-around">
                            <div>
                                <a href="/lojas/editar/{{this._id}}" class="btn btn-lg btn-warning mx-1 shadow-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                            <div>
    
                                <button class="btn btn-lg btn-danger modal-delete shadow-sm">
                                <i class="bi bi-trash"></i>
                                </button>
    
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </section>
</div>