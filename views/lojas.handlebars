<section class="m-1">
    <a href="/lojas/novo" class="btn btn-dark"> 
        <i class="bi bi-plus"></i>
        Criar loja
    </a>
    <hr/>
    <form method="GET">
        <input 
        type="text" 
        name="nomeLoja"
        placeholder="Nome do Loja"
        class="form-control form-control-sm"
        value="{{nomeLoja}}"
        >
        <button class="btn btn-sm btn-dark mt-1">
            <i class="bi bi-search"></i>
            Buscar
        </button>
    </form>
    <table class="table">
        <thead>
            <th>Estado</th>
            <th><i class="bi bi-shop"> </i>Nome</th>
            <th>CNPJ</th>
            <th>Endereço</th>
            <th>Funcionamento</th>
            <th>Avaliações</th>
            <th>Ações</th>
        </thead>
        <tbody>
            {{#each lojas}}
            <tr>
                <td><i class="bi bi-shop"></i>{{this.state}}</td>
                <td>{{this.name}}</td>
                <td>{{this.cnpj}}</td>
                <td>{{this.address}}</td>
                <td>{{this.operationOpen}}</td>
                <td>{{this.operationClose}}</td>
                <td>{{this.reputation}}</td>
                <td>
                    <div class="d-flex">
                        <div>
                            <a href="/lojas/editar/{{this._id}}" class="btn btn-sm btn-warning mx-1">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </div>
                        <div>
                            <form action="/lojas/deletar/" method="POST">
                                <input type="hidden" name="id" value="{{this._id}}">
                                <button class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <div class="d-flex justify-content-around flex-wrap">
        {{#each lojas}}
            <div class="card mt-4">
                <img src="/img/logo.png" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.address}}</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Horário de funcionamento: {{this.operationOpen}} às {{this.operationClose}}</li>
                    <li class="list-group-item">{{this.cnpj}}</li>
                    <li class="list-group-item">{{this.state}}</li>
                    <li class="list-group-item">{{this.reputation}}</li>
                </ul>
                <div class="card-body">
                    <div class="d-flex justify-content-around">
                            <div>
                                <a href="/lojas/editar/{{this._id}}" class="btn btn-lg btn-warning mx-1">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                            <div>
                                <form action="/lojas/deletar/" method="POST">
                                    <input type="hidden" name="id" value="{{this._id}}">
                                    <button class="btn btn-lg btn-danger">
                                    <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</section>