<div class="container">
    <section class="m-1 mt-3">
        <a href="/cupom/novo" class="btn btn-success">
            <i class="bi bi-ticket-perforated"></i>
            Criar Cupom
        </a>
        <hr/>
        <div >
            <form method="GET" class="row">
                <div class="col-md-10">
                    <input
                    type="text"
                    name="nomeCupom"
                    placeholder="Busque pelo nome do cupom"
                    class="form-control form-control mt-3"
                    value="{{nomeCupom}}"
                    />
                </div>
                <div class="col-md-2"> 
                    <button class="btn btn btn-dark mt-3">
                    <i class="bi bi-search"></i>
                    Buscar
                    </button>
                </div>
            </form>
        </div>
    
        <div class="d-flex justify-content-around flex-wrap">
            {{#each cupons}}
                <div class="modal" id="myModal" tabindex="-1">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Deseja mesmo deletar o cupom {{this.name}} ?</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cancelar</button>
                                <form action="/cupom/deletar" method="POST">
                                    <input type="hidden" name="id" value="{{this._id}}">
                                    <button class="btn btn-danger delete mx-1" type="submit">
                                        Deletar
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow mt-4">
                    <div class="d-flex justify-content-center">
                        <img src="/img/logo.png" height="150" width="300" alt="Logo Soulshop">
                    </div>
                    <div class="card-body bg-secondary">
                        <h5 class="card-title text-center text-white">{{this.name}}</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <i class="bi bi-cash"></i> Ganhe <strong>R${{this.value}}</strong> em desconto
                        </li>
                        <li class="list-group-item">
                            <i class="bi bi-calendar4-week"></i> Válido até: <strong>{{this.expiration}}</strong>
                        </li>
                    </ul>
                    <div class="card-body">
                        <div class="d-flex justify-content-around">
                            <div>
                                <a href="/cupom/editar/{{this._id}}" class="btn btn-lg btn-warning mx-1 shadow-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            </div>
                            <div>
    
                                <button class="btn btn-lg btn-danger modal-delete shadow-sm">
                                <i class="bi bi-trash"></i>
                                </button>
    
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </section>
</div>