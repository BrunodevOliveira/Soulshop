<div class="container">
    <section class="m-1 mt-3">
        <a href="/pagamentos/novo" class="btn btn-success">
            <i class="bi bi-credit-card-2-front"></i>
            Cadastrar Forma de Pagamento
        </a>
        <hr />
        <div>
            <form method="GET" class="row">
                <div class="col-md-10">
                    <input type="text" name="nomePagamento"
                        placeholder="Busca Meio de Pagamento: Crédito / Débito / Boleto"
                        class="form-control form-control mt-3" value="{{nomePagamento}}" />
                </div>
                <div class="col-md-2">
                    <button class="btn btn btn-dark mt-3">
                        <i class="bi bi-search"></i>
                        Buscar
                    </button>
                </div>
            </form>
        </div>
        <div class="d-flex justify-content-around flex-wrap">
            <h2>Meios de Pagamento Cadastrados </h2>
        </div>
        <div class="d-flex justify-content-around flex-wrap">

            {{#each pagamentos}}
            <div class="modal" id="myModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Deseja mesmo deletar este meio de pagamento?{{this.name}}</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Cancelar</button>
                            <form action="/pagamentos/deletar" method="POST">
                                <input type="hidden" name="id" value="{{this._id}}">
                                <button class="btn btn-danger delete mx-1" type="submit">
                                    Deletar
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow mt-4">
                <div class="d-flex justify-content-center">
                    <img src="/img/logo.png" height="150" width="300" alt="Logo Soulshop">
                </div>
                <div class="card-body bg-secondary">
                    <h5 class="card-title text-center text-white">{{this.operation}}</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><i class="bi bi-credit-card-2-front"></i>Número do Cartão: {{this.number}}</li>
                    <li class="list-group-item"><i class="bi bi-pen"></i>Nome no Cartão: {{this.name}}</li>
                    <li class="list-group-item"><i class="bi bi-calendar"></i>Expira em:
                        {{this.expMonth}}/{{this.expYear}}</li>
                    <li class="list-group-item"><i class="bi bi-upc-scan"></i>Código CVV: {{this.cvv}} </li>
                    <li class="list-group-item"><i class="bi bi-file-person"></i>CPF: {{this.cpf}}</li>
                    <li class="list-group-item"><i class="bi bi-mailbox"></i>Endereço: {{this.address}}</li>
                    <li class="list-group-item"><i class="bi bi-mailbox"></i>Estado: {{this.state}}</li>
                </ul>
                <div class="card-body">
                    <div class="d-flex justify-content-around">
                        <div>
                            <a href="/pagamentos/editar/{{this._id}}" class="btn btn-lg btn-warning mx-1 shadow-sm">
                                <i class="bi bi-pencil"></i>
                            </a>
                        </div>
                        <div>

                            <button class="btn btn-lg btn-danger modal-delete shadow-sm">
                                <i class="bi bi-trash"></i>
                            </button>

                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
</div>